<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/picture_layout_height"
    android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/imageview_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/picture_layout_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/imageview_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_placeholder"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textview_picture_date_added"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackTransparency"
        android:text="Picture"
        android:textAlignment="center"
        android:textSize="@dimen/picture_date_added_textsize"
        android:textColor="@android:color/white"/>
</RelativeLayout>