<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/folder_layout_height"
    android:layout_centerHorizontal="true"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/imageview_folder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/folder_layout_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:background="@color/blackTransparency"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_folder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Folder"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/folder_title_textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_folder_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/folder_count_textsize" />
    </LinearLayout>
</RelativeLayout>