<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/folder_layout_height"
    android:layout_centerHorizontal="true"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/imageview_folder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/folder_layout_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/textview_folder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Folder"
            android:textStyle="bold"
            android:textSize="@dimen/folder_title_textsize"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/textview_folder_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/folder_count_textsize"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</RelativeLayout>